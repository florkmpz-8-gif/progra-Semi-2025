model IEnumerable<AngelBeautySalon.Models.Cliente>


    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="fas fa-users"></i> Gestión de Clientes
            </h2>

            if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Barra de búsqueda y acciones -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       name="searchString" 
                                       id="searchInput"
                                       value="@ViewData["CurrentFilter"]" 
                                       placeholder="Buscar por nombre, apellido, teléfono o email..."
                                       autocomplete="off">
                                <button class="btn btn-outline-secondary" type="submit">
                                    Buscar
                                </button>
                                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                                {
                                    <a asp-action="Index" class="btn btn-outline-danger">
                                        <i class="fas fa-times"></i> Limpiar
                                    </a>
                                }
                            </div>
                            <!-- Resultados de búsqueda en tiempo real -->
                            <div id="searchResults" class="list-group mt-2" style="display: none; position: absolute; z-index: 1000; width: 100%; max-width: 600px;"></div>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Nuevo Cliente
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de clientes -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Teléfono</th>
                                        <th>Email</th>
                                        <th>Fecha Nacimiento</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    foreach (var cliente in Model)
                                    {
                                        <tr>
                                            <td>cliente.Nombre</td>
                                            <td>cliente.Apellido</td>
                                            <td>cliente.Telefono</td>
                                            <td>cliente.Email</td>
                                            <td>cliente.FechaNacimiento.ToShortDateString()</td>
                                            <td class="text-center">
                                                <a asp-action="Edit" asp-route-id="cliente.ClienteId" 
                                                   class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="cliente.ClienteId" 
                                                   class="btn btn-sm btn-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                            {
                                <p class="mb-0">No se encontraron clientes que coincidan con la búsqueda.</p>
                            }
                            else
                            {
                                <p class="mb-0">No hay clientes registrados. <a asp-action="Create">Crear el primero</a></p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

section Scripts {
    <script>
        // Búsqueda en tiempo real con AJAX
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');

        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const term = this.value.trim();

            if (term.length < 2) {
                searchResults.style.display = 'none';
                return;
            }

            searchTimeout = setTimeout(() => {
                fetch(`/Clientes/BuscarAjax?term=${encodeURIComponent(term)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data.length > 0) {
                            let html = '';
                            data.data.forEach(cliente => {
                                html += `
                                    <a href="/Clientes/Edit/${cliente.id}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">${cliente.nombre}</h6>
                                            <small>${cliente.telefono}</small>
                                        </div>
                                        <small class="text-muted">${cliente.email}</small>
                                    </a>
                                `;
                            });
                            searchResults.innerHTML = html;
                            searchResults.style.display = 'block';
                        } else {
                            searchResults.innerHTML = '<div class="list-group-item">No se encontraron resultados</div>';
                            searchResults.style.display = 'block';
                        }
                    })
                    .catch(error => {
                        console.error('Error en la búsqueda:', error);
                    });
            }, 300);
        });

        // Cerrar resultados al hacer clic fuera
        document.addEventListener('click', function(e) {
            if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
                searchResults.style.display = 'none';
            }
        });
    </script>
}
